



<div class="container theme-showcase" role="main">

<h2>You are following <%= @user.following.length %> users</h2>


<% @user.following.each do |following|%>

<div class="row">

<h2>
<img src="http://giuliofidente.com/images/gravatar_to140.png" width="50px">
<li> <a href="/users/<%= following.id %>"><%= following.username%></a> </li>
<form action='/users/<%=@user.id%>/following/<%= following.id %>'method="post" >
<input name="_method" type="hidden" value="delete" />
<button type='submit'>Unfollow</button>
</form>

</h2>
</div>
<br><br>

<%end%>

</div>









