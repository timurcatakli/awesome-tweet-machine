
<div id="profile_info">
  <h1><%= @user.name %></h1>
  <h2><%= @user.username %></h2>
  <%= @user.image %>
<form action="/users/<%=@logged_in_user.id%>/followers/<%=user.id%>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <input type="submit" value="Follow!">
</form>
</div>

<div id="posts">
<h2><%= @user.name %>'s Tweets</h2>
  <% @user.tweets.each do |tweet| %>
  <%= tweet.post %><br>
  <%= tweet.created_at.httpdate %>
  <hr>
  <% end %>

</div>
